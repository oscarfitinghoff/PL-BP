{
  "name": "patternlab-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:js-clean": "rimraf ui/js/*",
    "build:js": "browserify prototype/source/js/init.js -t [ babelify --presets [ env ] ] | uglifyjs > ui/js/app.js",
    "build:css-clean": "rimraf ui/css/*",
    "build:css": "node-sass-chokidar --source-map true prototype/source/css/scss/ -o ui/css --output-style compressed",
    "build:css-autoprefixer": "postcss ui/css/*.css --use autoprefixer -d ui/css",
    "build:img-clean": "rimraf ui/images/*",
    "build:img": "copyfiles -e 'prototype/source/images/prototype/**/*.*' -f prototype/source/images/**/*.* ui/images",
    "build:fonts-clean": "rimraf ui/fonts/*",
    "build:fonts": "copyfiles -f prototype/source/fonts/**/*.* ui/fonts",
    "prototype:install": "cd prototype && npm i",
    "prototype": "npm start --prefix ./prototype",
    "serve": "npm run prototype",
    "dev": "npm run prototype"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "gulp": "github:gulpjs/gulp#4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "chokidar-cli": "^1.2.0",
    "copyfiles": "^1.2.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "imagemin": "^5.3.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2"
  }
}
